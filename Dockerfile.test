# Test Dockerfile - minimal image for running tests
FROM node:20-alpine

# Install pnpm
RUN npm install -g pnpm

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml ./

# Install dependencies (including dev dependencies for tests)
RUN pnpm install

# Copy source code, test files, and config
COPY . .

# Default command (can be overridden)
CMD ["pnpm", "test"]

