{
  "name": "haystack",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=e2e",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:docker": "docker-compose -f docker-compose.test.yml run --rm test",
    "test:e2e:docker": "docker-compose -f docker-compose.test.yml run --rm test pnpm test:e2e",
    "test:setup": "NODE_ENV=test ts-node -r tsconfig-paths/register test/setup/setup-test-db.ts",
    "docs:dev": "cd website && pnpm start",
    "docs:build": "cd website && pnpm build",
    "docs:serve": "cd website && pnpm serve",
    "docs:generate-openapi": "ts-node -r tsconfig-paths/register scripts/generate-openapi.ts",
    "docs:prepare": "bash scripts/prepare-docs-for-commit.sh",
    "migration:generate": "ts-node -r tsconfig-paths/register scripts/migration-generate.ts",
    "migration:run": "pnpm exec ts-node -r tsconfig-paths/register scripts/run-migrations-sql.ts",
    "migration:revert": "ts-node -r tsconfig-paths/register scripts/migration-revert.ts",
    "migration:show": "ts-node -r tsconfig-paths/register scripts/migration-show.ts",
    "db:migrate:test": "NODE_ENV=test pnpm migration:run",
    "db:seed:test": "NODE_ENV=test ts-node -r tsconfig-paths/register test/setup/seed-test-data.ts",
    "db:reset:test": "NODE_ENV=test ts-node -r tsconfig-paths/register test/setup/reset-test-db.ts",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f app",
    "docker:clean": "docker-compose down -v",
    "docker:restart": "docker-compose restart app",
    "docker:dev": "docker-compose up",
    "docker:dev:build": "docker-compose build",
    "docker:dev:down": "docker-compose down",
    "docker:dev:logs": "docker-compose logs -f app",
    "docker:dev:clean": "docker-compose down -v",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^3.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.8.1",
    "express-timeout-handler": "^2.2.2",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "joi": "^18.0.2",
    "lodash": "^4.17.21",
    "pg": "^8.11.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.17",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@faker-js/faker": "^10.2.0",
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.12",
    "@swc/cli": "^0.7.10",
    "@swc/core": "^1.15.8",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.23",
    "@types/node": "^22.19.7",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^11.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-esm-transformer": "^1.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm-naming-strategies": "^4.1.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.53.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testMatch": [
      "**/src/**/*.spec.ts",
      "**/test/**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "tsconfig": {
            "paths": {
              "@common/*": [
                "src/common/*"
              ],
              "@modules/*": [
                "src/modules/*"
              ],
              "@config": [
                "src/config"
              ],
              "@config/*": [
                "src/config/*"
              ],
              "@errors": [
                "src/common/errors"
              ],
              "@responses": [
                "src/common/responses"
              ],
              "@database": [
                "src/common/database"
              ],
              "@redis": [
                "src/common/redis"
              ]
            }
          }
        }
      ]
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s",
      "!src/**/*.spec.ts",
      "!src/**/*.interface.ts",
      "!src/**/*.type.ts",
      "!src/**/index.ts",
      "!src/**/*.config.ts",
      "!src/main.ts",
      "!dist/**",
      "!node_modules/**",
      "!website/**"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "testEnvironment": "node",
    "testTimeout": 30000,
    "maxWorkers": "50%",
    "transformIgnorePatterns": [
      "node_modules/(?!@faker-js|uuid)"
    ],
    "extensionsToTreatAsEsm": [],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup/jest.setup.ts"
    ],
    "globalSetup": "<rootDir>/test/setup/global-setup.ts",
    "globalTeardown": "<rootDir>/test/setup/global-teardown.ts",
    "moduleNameMapper": {
      "^@common$": "<rootDir>/src/common",
      "^@common/(.*)$": "<rootDir>/src/common/$1",
      "^@modules/(.*)$": "<rootDir>/src/modules/$1",
      "^@config$": "<rootDir>/src/config",
      "^@config/(.*)$": "<rootDir>/src/config/$1",
      "^@errors$": "<rootDir>/src/common/errors",
      "^@responses$": "<rootDir>/src/common/responses",
      "^@database$": "<rootDir>/src/common/database",
      "^@redis$": "<rootDir>/src/common/redis",
      "^uuid$": "<rootDir>/test/mocks/uuid.mock.ts"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "qs": ">=6.14.1"
    }
  }
}
