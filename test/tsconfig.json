{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../",
    "paths": {
      "@common": ["src/common"],
      "@common/*": ["src/common/*"],
      "@modules": ["src/modules"],
      "@modules/*": ["src/modules/*"],
      "@config": ["src/config"],
      "@config/*": ["src/config/*"],
      "@errors": ["src/common/errors"],
      "@responses": ["src/common/responses"],
      "@database": ["src/database"],
      "@database/*": ["src/database/*"],
      "@redis": ["src/redis"],
      "@redis/*": ["src/redis/*"],
      "@queue": ["src/queue"],
      "@queue/*": ["src/queue/*"],
      "@logging": ["src/logging"],
      "@logging/*": ["src/logging/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
